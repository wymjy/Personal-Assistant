<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background ="@drawable/title_background1"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize">
        <Button
            android:id="@+id/back_regi"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back_button_selector" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="80dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="10dip"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="注册" android:textSize="20sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="end"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="2" android:layout_marginTop="52dp"
            android:text="用户名：" android:textSize="20sp"/>
        <EditText
            android:id="@+id/regi_name"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="3" android:layout_marginTop="50dp"
            android:layout_marginRight="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="end"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="2" android:layout_marginTop="20dp"
            android:text="密码：" android:textSize="20sp" />
        <EditText
            android:id="@+id/regi_password"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="3" android:layout_marginTop="20dp"
            android:layout_marginRight="40dp" android:inputType="textPassword"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="end"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="2" android:layout_marginTop="20dp"
            android:text="确认密码：" android:textSize="20sp" />
        <EditText
            android:id="@+id/regi_confirm"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="3" android:layout_marginTop="20dp"
            android:layout_marginRight="40dp" android:inputType="textPassword"/>
    </LinearLayout>
    <Button
        android:id="@+id/regi_register"
        android:layout_width="200dp" android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" android:layout_marginTop="10dp"
        android:text="注册"/>
</LinearLayout>